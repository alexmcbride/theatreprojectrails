<h1><%= @category.name %></h1>

<% if @posts.each do |post| %>
  <article>
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p class="post-meta">
      Posted <%= distance_of_time_in_words_to_now(post.published) %> ago by <%= post.user.username %>
      <% if can_edit post %>
      | <%= link_to 'Edit', edit_post_path(post) %>
      | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  </article>
<% end.empty? %>
  <p><em>There are no posts to display.</em></p>
<% end %>